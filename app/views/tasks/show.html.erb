<h1><%= @task.title %> </h1>
<h2><%= @task.details %> </h2>

<p>
  <% if @task.completed %>
    <i class="far fa-check-square"> This task is completed </i>
  <% else %>
    <i class="far fa-square"> This task is not completed </i>
  <% end %>
</p>

<p> <%= link_to 'Edit this task', edit_path %> </p>

<p> <%= link_to 'Back to list', tasks_path %> </p>

