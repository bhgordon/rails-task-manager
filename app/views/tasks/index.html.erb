<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
      <!-- <%= task.details %> -->
    </li>
  <% end %>
</ul>
<p> <%= link_to "Add a new task", new_path %> </p>
